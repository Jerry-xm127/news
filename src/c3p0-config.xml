
<!-- 数据库连接池 c3p0 -->
<c3p0-config>

	<default-config>
	
		<property name="driverClass">com.mysql.jdbc.Driver</property>
<!-- 		jdbc:mysql://localhost:3306/vips?characterEncoding=utf8&useSSL=true -->
		<property name="jdbcUrl">jdbc:mysql://127.0.0.1:3306/news?characterEncoding=utf8&amp;useSSL=true</property>
		<property name="user">root</property>
		<property name="password">123456789</property>
		
<!-- 		当数据库连接池中的连接耗尽时c3p0一次性获取的连接数   Default : 3 -->
		<property name="acquireIncrement">3</property>
<!-- 		初始化数据库连接池时连接的数量 -->
		<property name="initialPoolSize">5</property>
<!-- 		数据库连接池中最小的数据库连接数 -->
		<property name="minPoolSize">5</property>
<!-- 		数据库连接池中最大的数据库连接数 -->
		<property name="maxPoolSize">10</property>
	
	</default-config>

</c3p0-config>










